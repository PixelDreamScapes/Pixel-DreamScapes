---
export interface Props {
  title: string
}
const { title } = Astro.props
---

<html lang="en">
  <head>
  <link rel="stylesheet" href="/src/styles/global.css">
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background-color: #0f0f0f;
        color: white;
        font-family: 'Arial', sans-serif;
        padding: 2rem;
        margin: 0;
      }
      a {
        color: #93f;
      }
    </style>
  </head>
  <body>
<header class="px-6 py-4 flex items-center justify-between bg-[#0e0e0e] border-b border-[#1e1e1e]">
  <a href="/" class="text-xl font-bold text-[#8e8aff] tracking-wide">
    Pixel DreamScapes
  </a>

  <!-- Mobile menu button -->
<!-- Mobile menu button -->
<button
  id="nav-toggle"
  class="md:hidden text-gray-300 focus:outline-none"
  aria-label="Toggle navigation"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

  <!-- Nav links -->
<nav
  id="nav-menu"
  class="hidden md:block transition-all duration-300 ease-in-out transform origin-top scale-y-0 md:scale-y-100
         md:transform-none md:flex space-y-4 md:space-y-0 space-x-0 md:space-x-6 text-sm
         absolute md:static top-full left-0 w-full md:w-auto bg-[#0e0e0e]
         md:bg-transparent md:pt-0 pt-4 md:pb-0 pb-6 md:border-none border-t border-[#1e1e1e]"
>
  <a href="/blog" class="block px-6 md:px-0 text-gray-300 hover:text-white">Blog</a>
  <a href="/gear" class="block px-6 md:px-0 text-gray-300 hover:text-white">Gear</a>
  <a href="/software" class="block px-6 md:px-0 text-gray-300 hover:text-white">Software</a>
  <a href="/about" class="block px-6 md:px-0 text-gray-300 hover:text-white">About</a>
</nav>
</header>
    <slot />
    <script is:inline>
  const toggleButton = document.getElementById('nav-toggle');
  const navMenu = document.getElementById('nav-menu');

  toggleButton?.addEventListener('click', () => {
    const isOpen = navMenu.classList.contains('scale-y-100');
    navMenu.classList.toggle('scale-y-0', isOpen);
    navMenu.classList.toggle('scale-y-100', !isOpen);
    navMenu.classList.toggle('hidden', isOpen);
  });
</script>
  </body>
</html>